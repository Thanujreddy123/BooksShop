{{!This is for the view books}}
<table style="border-collapse: collapse; width: 50%; border: 1px solid black;">
  <tr style="border: 1px solid black;">
    <th style="border: 1px solid black;">Title</th>
    <th style="border: 1px solid black;">Price</th>
    <th style="border: 1px solid black;">Cover Image</th>
  </tr>

  {{#each books}}
    <tr style="border: 1px solid black;">
      <td style="border: 1px solid black;">{{this.Title}}</td>
      <td style="border: 1px solid black;">{{this.price}}</td>
      <td style="border: 1px solid black;"><img src="./images/{{this.image}}" style="width: 100px; height: 100px;"></td>
    </tr>
  {{/each}}
</table>
